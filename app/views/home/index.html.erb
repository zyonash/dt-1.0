
<div id="header">
  <div id="homepage_login">
    <%= form_for("user", :url => user_session_path) do |f| %>
      <%= f.submit "Sign in", :id => "homepage_login_submit" %>
      <%= f.password_field :password , :size=>'15', :maxlength=>'32', :placeholder => "Password", :tabindex => 2, :id => "homepage_login_password_bar" %>
      <%= f.text_field :email , :size=>'15',:maxlength=>'32', :placeholder => "Email", :tabindex => 1, :id => "homepage_login_email_bar" %>
    <% end %>
  </div>
</div>
    
<div id="content">
  <div id="pitch">
    <h3>What's happening at your campus?</h3>
      <p id="tagline">One website. &nbsp;Every event imaginable.</p>
      <ul id="description">
      <li></li>
      <li>Create and broadcast your own events. Find new clubs, study groups and activities. Exclusively for your university.</li>
      <li><strong>Only on Dormtown.</strong></li>
      </p>

      <div id="students">
        <p><strong>New to Dormtown?</strong> Sign up with a valid pitt.edu email address.</p>
        <hr />
        <%= form_for("user", :url => user_registration_path, :html => { :onsubmit => 'afterSignup(); return true;' } ) do |f| %>
          <div><%= f.label 'University email' %><br />
          <%= f.email_field :email, :id => "homepage_register_email_bar" %></div>
          <div><%= f.label :password %><br />
          <%= f.password_field :password, :id => "homepage_register_password_bar" %></div>

          <div><%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, :id => "homepage_register_password_confirmation_bar" %></div>

          <div><%= f.submit "Sign up", :id => "homepage_register_submit" %></div>
          <% end %>
      </div>
    </div>
</div>

</div>




