<div id="container">
		<div id="sidebar">
			
			<div id="navigation">
			  <ul>
				<li><a class="current" href="">Events</a></li>
				  <ul id="sidebar_events_subheader">
					<li class="current_subheader"><a href="">Popular</a></li>
					<li><a href="events/today">Today</a></li>
					<li><a href="events/tomorrow">Tomorrow</a></li>
					<li><a href="events/recent">Recently added</a></li>
				  </ul>
				<li><%= link_to 'Post', new_event_path %></li>
					
			  </ul>
			</div>
		</div>
		

		<div id="events_info">
			<div id="events_info_title"><%= @event.name %> </div>
			<div id="events_info_datetime"><%= @event.eventdate.strftime("%m/%d/%Y") %> at <%= @event.eventtime.strftime("%I:%M%p") %></div>
			<div id="events_info_location"><%= @event.location %></div>
			<p id="events_info_description"><%= @event.description %> </p>
			<%= link_to 'Back to Events', events_path %>
			<p>Page Views: <%= @event.page_views %></p>
		</div>
		
			


</div>

