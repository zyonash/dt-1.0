<%= form_for @event do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="new_event_wrapper">
  <div class="new_event_datetime_wrapper">
  <div class="field">
    <div class="event_label">
    <div class="new_event_date">
    </div>
    </div>
    <div class="event_field">
    <div class="new_event_date">
    <%= f.date_select :eventdate, :order => [:month, :day, :year] %>
    </div>
    </div>
  </div>
  </div>
  <div class="field">
    <div class="event_field">
    <div class="new_event_time">
    <%= f.time_select :eventtime, {:ampm => true, :minute_step => 5} %>
    </div>
    </div>
  </div>
  </div>
  <div class="new_event_name_wrapper">
  <div class="field">
    <div class="event_label">
    <div class="new_event_name">
    </div>
    </div>
    <div class="event_field">
    <%= f.text_field :name, :placeholder => "Name", :class => "new_event_name_field" %>
    </div>
  </div>
  </div>
  <div class="new_event_location_wrapper">
  <div class="field">
    <div class="event_label">
    <div class="new_event_location">
    </div>
    </div>
    <div class="event_field">
    <%= f.text_field :location, :placeholder => "Where?", :class => "new_event_location_field" %>
    </div>
  </div>
  </div>
  
  <div class="field">
    <div class="event_label">
    <div class="new_event_description">
    </div>
    </div>
    <div class="event_field">
    <%= f.text_area :description, :class => "new_event_description_field", :placeholder => "Description" %>
    </div>
  </div>
   
  <div class="actions">
    <%= f.submit "Post it", :class => "new_event_submit"  %>
  </div>
  </div>
<% end %>
