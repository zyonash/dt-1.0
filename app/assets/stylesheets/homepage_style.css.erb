
body {
	min-height: 100em;
	font-family: "Myriad Pro", Helvetica, sans-serif;
	background-repeat: no-repeat;
	overflow: hidden;
	font-family: "Myriad Pro", Helvetica, sans-serif;
	background-size: 100%;
	background-color: #72a2f7;
	background-repeat: no-repeat;

	/* Safari 5.1, Chrome 10+ */
	background: -webkit-linear-gradient(top, #72A2F7, #80acf9,  #D2E0F7);


	background: -webkit-gradient(top, #72A2F7, #80acf9, #fff);

	/* Safari 5.1, Chrome 10+ */
	background: -webkit-linear-gradient(top, #72A2F7, #80acf9, #fff);

	/* Firefox 3.6+ */
	background: -moz-linear-gradient(top, #72A2F7, #80acf9, #fff);

	/* IE 10 */
	background: -ms-linear-gradient(top, #72A2F7, #80acf9, #fff);

	/* Opera 11.10+ */
	background: -o-linear-gradient(top, #72A2F7, #80acf9, #fff);
}


#header {

	margin-top: -1.0em;
	box-shadow: 0 0 10px rgba(1,1,1,.5);
	background-color: #EEE;
	height: 1.6em;
	width: 105%;
	display: block;
	margin-left: -1em;

}


#top {

	z-index: 1;
}

/*LEFT SIDE - LOGO, TAGLINE, and ABOUT MESSAGE*/

#logo {
	z-index: 1;
	margin: 5em 0 0 8em;
}

#tagline {
	z-index: 1;
	color: #eee;
	margin: -4.1em 0 0 7.6em;
	font-size: 2.6em;
	border-radius: .7em;
	padding: .5em .5em 0.2em .5em;
	text-shadow: 1px 2px 2px #111;
	min-width: 20em;

}

#about {
	z-index: 1;
	color: #E0E2E1;
	margin: -1.8em 0 0 16.5em;
	font-size: 1.25em;
	min-width: 20em;
	padding: .5em .5em 0.2em .5em;
	text-shadow: 1px 2px 2px #111;
}
/*END LEFT SIDE*/


/*RIGHT SIDE - LOGIN, REGISTER, and EMPLOYERS*/

#content {


}

#students {

	position: relative;	
	margin-left: auto;
	margin-right: auto;
	width: 400px;
	background-color: #efefef;
	padding: .2em 0.7em 1.5em 0.7em;
	border-radius: .3em;
	opacity: .9;
	font-size: 1.3em;
	background: -webkit-linear-gradient(top,#fff 0,#C4C4C4 100%);
	background: -moz-linear-gradient(top,#fff 0,#ddd 100%);
	background: -ms-linear-gradient(top,#fff 0,#ddd 100%);
	background: -o-linear-gradient(top,#fff 0,#ddd 100%);
	background: linear-gradient(top,#fff 0,#ddd 100%);
}

#students hr {
	margin-top: -0.5em;
}

#footer {

	position: relative;
	margin-left: 31%;
	margin-right: auto;
	margin-top: 3em;
}

#footer ul li  {
	display: inline;
	color: #000;
	padding-right: .7em;
}

#footer a:link, a:visited {
	color: #000;
	text-decoration: none;
}

#footer a:hover {
	color: #adadad;
}


#homepage_login {

	margin-right: 2.7em;

}

#homepage_login_submit {
	
	float: right;
}

#homepage_login_password_bar {


	background: transparent url(<%= image_path 'bg.jpg' %>) no-repeat;
	color : #747862;	
	border:0;
	padding:4px 8px;
	margin-bottom:0px;
	float: right;
	margin-right: 0.2em;
}

#homepage_login_email_bar {


	background: transparent url(<%= image_path 'bg.jpg' %>) no-repeat;
	color : #747862;	
	border:0;
	padding: 4px 8px;
	float: right;
	margin-right: 0.2em;
}


#homepage_register_email_bar, #homepage_register_password_bar, #homepage_register_password_confirmation_bar {

	width: 100%;	
	
}

#homepage_register_submit {

	
	margin-top: 1em;
	margin-bottom: -2em;
	width: 100%;
	height: 2em;
}
