body {
	font-family: "Myriad Pro", Helvetica, sans-serif;
	background-size: 100%;
	background-repeat: no-repeat;
	min-height: 100%;
	background-image: url(<%= asset_path "background.jpg" %>);
}

body a:link { 
	text-decoration: none; 
	color: #333;
}

body a:visited { 
	color: #444;
}
	






/*HEADER - BEGIN*/
#header {

	box-shadow: 0 0 10px rgba(1,1,1,.5);
	background-color: #EEE;
	height: 1.6em;
	width: 105%;
	margin: -1em auto 0 -1em;
	padding: 0;
	display: block;

}


#content {
  margin: 10em auto 0 auto;
  padding: 0 ;
}

#students {

        position: relative;     
        margin-left: auto;
        margin-right: 1em;
        width: 450px;
        background-color: #efefef;
        padding: .2em 0.7em 1.5em 0.7em;
        border-radius: .3em;
        opacity: .9;
        font-size: 0.9em;
        background: -webkit-linear-gradient(top,#eee 0,#C4C4C4 100%);
        background: -moz-linear-gradient(top,#eee 0,#ddd 100%);
        background: -ms-linear-gradient(top,#eee 0,#ddd 100%);
        background: -o-linear-gradient(top,#eee 0,#ddd 100%);
        background: linear-gradient(top,#eee 0,#ddd 100%);
}


#students hr {
	margin-top: -0.5em;
}

#pitch {
	float: right;
	color: #222;
	width: 25em;
	font-size: 1.3em;
	margin: -2em auto 0 1.5em;
	padding: 0.1em 0em 0 0.5em;
	border-radius: 4px;
}

#pitch h3 {
	margin-bottom: -0.7em;
	font-size: 1.4em;
	background-color: #fff;
	border-radius: 4px;
	width: 18em;
}

#pitch #tagline {
	background-color: #fff;
	border-radius: 4px;
	width: 21em;
}



#pitch #description {
	margin-top: -0.5em;
	font-size: .8em;
	width: 29em;
	background-color: #fff;
	border-radius: 6px;
	padding-left: 0.1em;
}



#pitch #description li {
	list-style-type: none;
}

#homepage_login {

	margin-right: 4em;

}

#homepage_login_submit {
	
	float: right;
}

#homepage_login_password_bar {


	background: transparent url(<%= image_path 'bg.jpg' %>) no-repeat;
	color : #747862;	
	border:0;
	padding:4px 8px;
	margin-bottom:0px;
	float: right;
	margin-right: 0.2em;
}

#homepage_login_email_bar {


	background: transparent url(<%= image_path 'bg.jpg' %>) no-repeat;
	color : #747862;	
	border:0;
	padding: 4px 8px;
	float: right;
	margin-right: 0.2em;
}


#homepage_register_email_bar, #homepage_register_password_bar, #homepage_register_password_confirmation_bar {

	width: 100%;	
	
}

#homepage_register_submit {

	
	margin-top: 1em;
	margin-bottom: -2em;
	width: 100%;
	height: 2em;
}
